@keyframes pather-appear
  from
    opacity 0
  to
    opacity 1

[p-pather]
  user-select none
  animation pather-appear 0.6s ease
  overflow-x auto
  overflow-y hidden
  white-space nowrap
  &::-webkit-scrollbar
    height $gap * 0.5
  &::-webkit-scrollbar-thumb
    background var(--color-clear)
    opacity 0.6
    border-radius $gap * 0.25

[p-pather-home]
  float left
  line-height 1
  margin 0 0.25em 0 0.75em
  padding $font_size - 1px 0

[p-pather-queue]
  line-height 3
  a
    display block
    float left
    color var(--color-background)
    background var(--color-text)
    line-height 1.6
    font-size $font_size * 0.75
    padding 0 0.6em
    margin ($font_size * 3 - $font_size * 0.75 * 1.6) * 0.5 0
    border-radius 0.6em 0
    margin-right 1em
    transition all 0.6s
    &:hover
      box-shadow 0 0 0.5em 2px var(--color-link)